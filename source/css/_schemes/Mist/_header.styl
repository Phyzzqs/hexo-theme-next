// Header
// --------------------------------------------------
.header { background: $whitesmoke; }
.header-inner {
  padding: 25px 0 20px;
  clearfix();

  +mobile() {
    width: auto;
    margin-bottom: 50px;
    padding: 10px;
  }
}

.site-meta {
  float: left;
  margin-left: -20px;
  line-height: normal;

  +mobile() {
    margin-left: 10px;
  }

  .brand {
    padding: 2px 1px;
    background: none;

    +mobile() { display: block; }
  }

  .logo { display: none; }

  .site-title {
    font-size: 22px;
    font-weight: bolder;

    +mobile() { line-height: 34px; }
  }
}